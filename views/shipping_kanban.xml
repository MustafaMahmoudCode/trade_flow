<odoo>
    <data>
        <record id="view_shipment_kanban" model="ir.ui.view">
            <field name="name">shipment.kanban</field>
            <field name="model">shipping.shipment</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_small_column"
                        highlight_color="color">
                    <!-- Fields to use in Kanban -->
                    <field name="name"/>
                    <field name="state"/>
                    <field name="client_id"/>
                    <field name="image_1920"/>
                    <field name="color"/>
                      <!-- Kanban view: under training / learning phase -->
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_global_click o_kanban_record"
                                 t-att-class="'oe_kanban_color_%s' % record.color.raw_value">
                                <!-- photo -->
                                <div class="o_kanban_image">
                                    <field name="image_1920" widget="image" class="w-100 h-auto object-fit-contain" options="{'size': (64, 64)}"/>
                                </div>

                                <div class="o_kanban_details">
                                    <strong>Shipment: <t t-esc="record.name.value"/></strong>
                                    <div><i class="fa fa-user me-1" title="Client"/><t t-esc="record.client_id.value"/></div>
                                    <div class="mt-1"><span class="badge bg-secondary"><t t-esc="record.state.value"/></span></div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>
