<odoo>
    <data>
                     <!--Shipments-->
        <record id="shipment_record_rule" model="ir.rule">
            <field name="name">Employee Shipments</field>
            <field name="model_id" ref="model_shipping_shipment"/>
            <field name="domain_force">[ '|', ('employee_id.user_id', '=', user.id), ('employee_id','=',False) ]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

                        <!--CLIENT-->
        <record id="client_employee_rule" model="ir.rule">
            <field name="name">Employee Clients</field>
            <field name="model_id" ref="model_shipping_client"/>
            <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="True"/>
        </record>

                    <!-- 1- ADMIN SEE ALL SHIPMENT  -->
        <record id="shipment_admin_rule" model="ir.rule">
            <field name="name">All Shipments for Admin</field>
            <field name="model_id" ref="model_shipping_shipment"/>
            <field name="domain_force">[(1,'=',1)]</field> <!-- يعرض كل شيء -->
            <field name="groups" eval="[(4, ref('base.group_system'))]"/> <!-- بس Admin -->
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
                    <!-- 2-  ADMIN SEE ALL CLIENTS  -->
        <record id="client_admin_rule" model="ir.rule">
            <field name="name">All Clients for Admin</field>
            <field name="model_id" ref="model_shipping_client"/>
            <field name="domain_force">[(1,'=',1)]</field> <!-- كل الـ records -->
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
    </data>
</odoo>
